@page
@model FitnessTracker.StevieTV.Pages.Delete

<h3>Delete a log entry</h3>
<h4>Are you sure you want to delete this entry?</h4>
<div>
    <div>
        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.FitnessItem.Date)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.FitnessItem.Date)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.FitnessItem.Type)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.FitnessItem.Type)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.FitnessItem.Duration)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.FitnessItem.Duration)
            </dd>
        </dl>
    </div>
    
    <form method="post">
        <input type="hidden" asp-for="FitnessItem.Id" />
        <input type="submit" value="Delete" class="btn btn-danger"/>
        <a button type="button" class="btn btn-primary" asp-page="./Index">Back to Overview</a>
    </form>
</div>


